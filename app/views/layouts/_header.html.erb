<header class="header-section">
  <div class="container">
    <div class="row">
      <div class="col-lg-3 col-md-3">
        <div class="site-logo">
          <%= link_to root_path do%>
            <%= image_tag "logo.png" %>
          <% end %>
        </div>
        <div class="nav-switch">
          <i class="fa fa-bars"></i>
        </div>
      </div>
      <div class="col-lg-9 col-md-9">
        <% if logged_in? %>
          <%= link_to t(".log_out"), logout_path, method: :delete, class: "site-btn header-btn" %>
        <% else %>
          <%= link_to t(".login"), login_path, class: "site-btn header-btn", remote: true  %>
        <% end %>
        <nav class="main-menu">
          <ul>
            <li><%= link_to t(".home"), root_path%></li>
            <li><%= link_to t(".about"), "#"%></li>
            <li class="dropdown">
              <%= link_to "#", "data-toggle": "dropdown" do %>
                <%= t ".branch" %>
                <b class="caret"></b>
              <% end %>
              <ul class="dropdown-menu" id= "branch_drop">
                <%= render partial: "branchs/branch", collection: @branchs %>
                <li class="divider"></li>
              </ul>
            </li>
            <% if current_user %>
              <li><%= link_to "Profile", current_user %></li>
              <% if current_user.admin %>
                <li><%= link_to "Admin Page", admin_index_path %></li>
              <% end %>
            <% end %>
          </ul>
          <ul>
            <div class="col-md">
              <%= form_tag vehicles_path, method: :get,
                class: "navbar-form search-form", id: "livesearch_form" do %>
                <div class="form-group dropdown">
                  <%= text_field_tag :search, params[:search],
                    class: "form-control dropdown-toggle",
                    placeholder: t(".search"),
                    "data-toggle": "dropdown", "aria-hidden": :true,
                    autocomplete: :off, required: true, id: "livesearch_input" %>
                  <ul class="dropdown-menu">
                    <div id="livesearch_dom"></div>
                  </ul>
                </div>
                <%= button_tag type: :submit, class: "btn btn-default" do %>
                  <span class="glyphicon glyphicon-search"></span>
                <% end %>
              <% end %>
            </div>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>
