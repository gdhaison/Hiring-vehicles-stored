<section class="single-course spad pb-0">
  <div class="container">
    <div class="course-meta-area">
      <div class="row">
        <%= image_tag check_image(@vehicle), id: "show-vehicle-img" %>
        <div class="col-lg-10 offset-lg-1">
          <div class="course-note"><%= t "status" %>: <%= t ".active" %></div>
          <h3><%= @vehicle.name %></h3>
          <div class="course-metas">
            <div class="course-meta">
              <div class="course-author">
                <div class="ca-pic set-bg" data-setbg="img/authors/2.jpg"></div>
                <h6><%= t ".branch" %></h6>
                <p><%= @vehicle.branch.name %></p>
              </div>
            </div>
            <div class="course-meta">
              <div class="cm-info">
                <h6><%= t ".category" %></h6>
                <p><%= @vehicle.category.name %></p>
              </div>
            </div>
            <div class="course-meta">
              <div class="cm-info">
                <h6><%= t ".description" %></h6>
                <p><%= @vehicle.description %></p>
              </div>
            </div>
          </div>
            <%= link_to "#", class: "site-btn price-btn" do %>
              <%= t ".price" %>: <%= @vehicle.price %>
            <% end %>
            <% if logged_in? %>
              <%= link_to t(".book"), new_hiring_path(vehicle_id: @vehicle.id), class: "site-btn buy-btn" %>
            <% else %>
              <%= link_to t(".book"), new_hiring_path(vehicle_id: @vehicle.id), class: "site-btn buy-btn", remote: true %>
            <% end %>
          </div>
        </div>
		<div class="comment_block">
		 <div class="create_new_comment">
      <% if logged_in? %>
		 	<div class="user_avatar">
		 		<img src="https://s3.amazonaws.com/uifaces/faces/twitter/BillSKenney/73.jpg">
		 	  </div><!-- the input field --><div class="input_comment">
		 		  <%= form_for [@vehicle, @comment], remote: true do |f| %>
            <%= f.text_field :content, placeholder: t(".add"), id: "text_area" %><br/>
            <%= f.hidden_field :user_id, value: current_user.id %>
          <% end %>
		 	  </div>
		   </div>
       <% end %>
       <div id = "comment_block">
         <%= render partial: "comments/comment", collection: @comments %>
	      </div>
			</div>
    </div>
  </div>
</section>
