<%= form_for @hiring do |f| %>
  <%= render "shared/error_messages.js.erb", object: f.object %>
  <div id="price">
    <p><h4><%= t ".price" %>: <strong id="vehicle-price"><%= @vehicle.price %></strong><%= t ".per_hour" %></h4></p>
  </div>
  <%= f.label t(".how_long") %>
  <div class="hour-field">
    <%= f.number_field :time, class: "form-control", id: "hiring-time", min: Settings.min_time %>
    <%= t ".hour" %>
  </div>
  <div id="subtotal">
    <strong><%= f.label t(".total") %>: <h3><p id="total"> </p></h3></strong>
  </div>
  
  <%= f.hidden_field :vehicle_id, value: params[:vehicle_id] %>
  <center><%= f.submit t(".order"), class: "btn btn-primary btn-lg" %></center>
<% end %>
